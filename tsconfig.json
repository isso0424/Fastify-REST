{
   "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true
   },
   "exclude": [
     "node_modules"
   ],
   "include": [
     "src/**/*.ts"
   ]
}
