{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "exclude": [
     "node_modules"
   ],
   "include": [
     "src/**/*.ts"
   ]
}
